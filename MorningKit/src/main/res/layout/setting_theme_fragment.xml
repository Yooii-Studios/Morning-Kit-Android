<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_theme_container"
    tools:context="com.yooiistudios.morningkit.setting.theme.MNThemeFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="#ffffff"
        android:paddingTop="@dimen/margin_inner"
        android:paddingBottom="@dimen/margin_inner"
        android:id="@+id/setting_theme_listview" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/setting_theme_adview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="a15278abca8d8ec" />

</RelativeLayout>
