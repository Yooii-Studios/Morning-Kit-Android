<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_calendar_detail_event_indicator_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_inner"
    android:orientation="vertical"
    android:background="@color/pastel_green_forward_pressed_color">

    <TextView
        android:id="@+id/panel_calendar_detail_event_indicator_item_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_centerInParent="true"
        android:text="@string/world_clock_tomorrow"
        android:textColor="@color/pastel_green_main_font_color"
        android:textSize="@dimen/panel_calendar_detail_item_indicator_textview_font_size"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/panel_calendar_detail_item_textview_padding"
        android:layout_marginRight="@dimen/panel_calendar_detail_item_textview_padding"/>

    <View
        android:id="@+id/panel_calendar_event_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_calendar_detail_item_padding"
        android:background="@color/pastel_green_main_font_color"
        android:layout_marginTop="@dimen/margin_outer"
        android:layout_marginLeft="@dimen/panel_detail_padding_inner"
        android:layout_marginRight="@dimen/panel_detail_padding_inner"
        android:layout_below="@id/panel_calendar_detail_event_indicator_item_textview"/>

</RelativeLayout>