<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_quotes_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/panel_detail_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/panel_quotes_detail_content_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/panel_detail_padding"
            android:gravity="center"
            android:textStyle="bold"
            android:text="To marry is to halve your rights and double your duties.\nArthur Schopenhaur"
            android:textSize="35dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/panel_quotes_detail_english_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_english_checkbox"
                android:text="@string/setting_language_english"
                android:textSize="25dp"/>

            <CheckBox
                android:id="@+id/panel_quotes_detail_english_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/panel_quotes_detail_korean_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_korean_checkbox"
                android:text="@string/setting_language_korean"
                android:textSize="25dp"/>

            <CheckBox
                android:id="@+id/panel_quotes_detail_korean_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/panel_quotes_detail_japanese_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_japanese_checkbox"
                android:text="@string/setting_language_japanese"
                android:textSize="25dp"/>

            <CheckBox
                android:id="@+id/panel_quotes_detail_japanese_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/panel_quotes_detail_simplified_chinese_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_simplified_chinese_checkbox"
                android:text="@string/setting_language_simplified_chinese"
                android:textSize="25dp"/>

            <CheckBox
                android:id="@+id/panel_quotes_detail_simplified_chinese_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/panel_quotes_detail_traditional_chinese_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_traditional_chinese_checkbox"
                android:text="@string/setting_language_traditional_chinese"
                android:textSize="25dp"/>

            <CheckBox
                android:id="@+id/panel_quotes_detail_traditional_chinese_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>