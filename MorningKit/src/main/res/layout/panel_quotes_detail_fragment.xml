<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_quotes_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:padding="@dimen/panel_quote_detail_padding">

        <TextView
            android:id="@+id/panel_quotes_detail_quote_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_view_pastel_green_quote"
            android:padding="@dimen/panel_detail_padding"
            android:gravity="center"
            android:text="To marry is to halve your rights and double your duties.\nArthur Schopenhaur"
            android:textSize="20dp"/>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_english_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_detail_padding"
            android:layout_marginLeft="@dimen/panel_detail_padding"
            android:layout_marginRight="@dimen/panel_detail_padding">

            <ImageButton
                android:id="@+id/panel_quotes_detail_language_image_button"
                android:layout_width="@dimen/panel_detail_image_button_size"
                android:layout_height="@dimen/panel_detail_image_button_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_panel_detail_checkbox"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_image_button"
                android:gravity="center_vertical"
                android:text="@string/setting_language_english"
                android:textSize="@dimen/panel_quotes_detail_language_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_korean_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_detail_padding"
            android:layout_marginLeft="@dimen/panel_detail_padding"
            android:layout_marginRight="@dimen/panel_detail_padding">

            <ImageButton
                android:id="@+id/panel_quotes_detail_language_image_button"
                android:layout_width="@dimen/panel_detail_image_button_size"
                android:layout_height="@dimen/panel_detail_image_button_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_panel_detail_checkbox"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_image_button"
                android:gravity="center_vertical"
                android:text="@string/setting_language_korean"
                android:textSize="@dimen/panel_quotes_detail_language_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_japanese_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_detail_padding"
            android:layout_marginLeft="@dimen/panel_detail_padding"
            android:layout_marginRight="@dimen/panel_detail_padding" >

            <ImageButton
                android:id="@+id/panel_quotes_detail_language_image_button"
                android:layout_width="@dimen/panel_detail_image_button_size"
                android:layout_height="@dimen/panel_detail_image_button_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_panel_detail_checkbox"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_image_button"
                android:gravity="center_vertical"
                android:text="@string/setting_language_japanese"
                android:textSize="@dimen/panel_quotes_detail_language_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_simplified_chinese_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_detail_padding"
            android:layout_marginLeft="@dimen/panel_detail_padding"
            android:layout_marginRight="@dimen/panel_detail_padding" >

            <ImageButton
                android:id="@+id/panel_quotes_detail_language_image_button"
                android:layout_width="@dimen/panel_detail_image_button_size"
                android:layout_height="@dimen/panel_detail_image_button_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_panel_detail_checkbox"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_image_button"
                android:gravity="center_vertical"
                android:text="@string/setting_language_simplified_chinese"
                android:textSize="@dimen/panel_quotes_detail_language_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_traditional_chinese_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_detail_padding"
            android:layout_marginLeft="@dimen/panel_detail_padding"
            android:layout_marginRight="@dimen/panel_detail_padding" >

            <ImageButton
                android:id="@+id/panel_quotes_detail_language_image_button"
                android:layout_width="@dimen/panel_detail_image_button_size"
                android:layout_height="@dimen/panel_detail_image_button_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_panel_detail_checkbox"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_image_button"
                android:gravity="center_vertical"
                android:text="@string/setting_language_traditional_chinese"
                android:textSize="@dimen/panel_quotes_detail_language_text_size"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>