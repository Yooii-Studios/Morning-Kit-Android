<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_quotes_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44ff44"
    android:orientation="vertical"
    android:padding="@dimen/panel_detail_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/panel_quotes_detail_content_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cfcfcf"
            android:padding="@dimen/panel_detail_padding"
            android:gravity="center"
            android:textStyle="bold"
            android:text="To marry is to halve your rights and double your duties.\nArthur Schopenhaur"
            android:textSize="20dp"/>

        <com.yooiistudios.morningkit.panel.quotes.detail.MNQuotesLanguageListView
            android:id="@+id/panel_quotes_detail_language_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff44ff"
            android:dividerHeight="@dimen/margin_outer"
            android:divider="#00000000"
            android:layout_marginTop="@dimen/margin_outer"/>

    </LinearLayout>
</ScrollView>