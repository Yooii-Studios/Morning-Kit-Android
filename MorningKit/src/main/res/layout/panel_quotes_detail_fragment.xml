<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_quotes_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44ff44"
    android:orientation="vertical"
    android:padding="@dimen/panel_detail_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/panel_quotes_detail_quote_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cfcfcf"
            android:padding="@dimen/panel_detail_padding"
            android:gravity="center"
            android:textStyle="bold"
            android:text="To marry is to halve your rights and double your duties.\nArthur Schopenhaur"
            android:textSize="20dp"/>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_english_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/panel_quotes_detail_language_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_checkbox"
                android:text="@string/setting_language_traditional_chinese"
                android:textSize="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_korean_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/panel_quotes_detail_language_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_checkbox"
                android:text="@string/setting_language_korean"
                android:textSize="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_japanese_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/panel_quotes_detail_language_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_checkbox"
                android:text="@string/setting_language_japanese"
                android:textSize="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_simplified_chinese_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/panel_quotes_detail_language_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_checkbox"
                android:text="@string/setting_language_simplified_chinese"
                android:textSize="25dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_quotes_detail_language_traditional_chinese_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/panel_quotes_detail_language_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/panel_quotes_detail_language_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/panel_detail_padding"
                android:layout_toLeftOf="@id/panel_quotes_detail_language_checkbox"
                android:text="@string/setting_language_traditional_chinese"
                android:textSize="25dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>