<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_weather_detail_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="#000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center">

        <com.stevenkim.waterlily.bitmapfun.ui.RecyclingImageView
            android:id="@+id/panel_weather_detail_list_item_image_view"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_inner"
            android:src="@drawable/icon_144"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_outer"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/panel_weather_detail_list_item_city_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textSize="21dp"
            android:textColor="#ffffffff"
            android:text="Seoul"/>

        <TextView
            android:id="@+id/panel_weather_detail_list_item_country_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel_weather_detail_list_item_city_text_view"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textSize="13dp"
            android:textColor="#ffffffff"
            android:text="Korea"/>
    </LinearLayout>
</LinearLayout>