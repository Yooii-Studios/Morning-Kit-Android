<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_pref_list_time_item_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:clickable="false"
    android:focusable="false" >

    <net.simonvt.timepicker.TimePicker
        android:id="@+id/alarm_pref_list_time_item_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alarm_pref_list_time_item_margin_bottom"
        android:layout_below="@id/alarm_pref_list_time_item_picker"
        android:background="@android:color/white"/>

</RelativeLayout>