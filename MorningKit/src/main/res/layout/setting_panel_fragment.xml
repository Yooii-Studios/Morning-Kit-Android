<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yooiistudios.morningkit.setting.panel.MNPanelSettingFragment"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/setting_panel_matrix_layout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_panel_matrix_layout_height"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="@dimen/margin_inner"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/setting_panel_matrix_layout_line_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1">

            <com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem
                android:id="@+id/setting_panel_matrix_item_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem>

            <com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem
                android:id="@+id/setting_panel_matrix_item_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_panel_matrix_layout_line_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1">

            <com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem
                android:id="@+id/setting_panel_matrix_item_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem>
            <com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem
                android:id="@+id/setting_panel_matrix_item_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </com.yooiistudios.morningkit.setting.panel.matrixitem.MNSettingPanelMatrixItem>
        </LinearLayout>
    </LinearLayout>

    <com.yooiistudios.morningkit.panel.selectpager.MNPanelSelectPagerLayout
        android:id="@+id/setting_panel_select_pager_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_select_pager_height"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
