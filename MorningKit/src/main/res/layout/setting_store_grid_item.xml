<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_store_grid_item_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_store_gridview_item_outer_height"
    android:background="#00ffffff" >

    <!--
    <com.yooiistudios.morningkit.common.shadow.StoreShadowLayout
        android:id="@+id/setting_store_grid_item_shadow_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_store_gridview_item_outer_height" />

    -->

    <RelativeLayout
        android:id="@+id/setting_store_grid_item_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/setting_store_gridview_padding"
        android:background="@drawable/shape_rounded_view_classic_gray"
        android:layout_margin="@dimen/setting_store_gridview_spacing_inner">

        <ImageView
            android:id="@+id/setting_store_grid_item_imageview"
            android:layout_width="@dimen/setting_store_gridview_item_image_view_size"
            android:layout_height="@dimen/setting_store_gridview_item_image_view_size"
            android:layout_marginLeft="@dimen/margin_inner"
            android:src="@drawable/shop_more_alarms_icon_ipad"
            android:scaleType="fitStart"
            android:background="#00ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/setting_store_grid_item_name_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/setting_store_grid_item_imageview"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/setting_store_grid_item_price_layout"
            android:gravity="center"
            android:background="#00000000"
            android:layout_centerInParent="true"
            android:text="LabelLabel\nLabelLabel\nLabelLabel"
            android:textColor="#ffffff"
            android:textSize="@dimen/setting_store_gridview_item_name_text_size"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/setting_store_grid_item_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/setting_store_grid_item_imageview"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_inner">

            <TextView
                android:id="@+id/setting_store_grid_item_price_textview"
                android:layout_width="@dimen/setting_store_gridview_item_price_text_width"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_outer"
                android:paddingRight="@dimen/margin_outer"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/shape_rounded_view_store_grid_item_button"
                android:textSize="@dimen/setting_store_gridview_item_price_text_size"
                android:text="@string/store_purchased"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:ellipsize="marquee"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
