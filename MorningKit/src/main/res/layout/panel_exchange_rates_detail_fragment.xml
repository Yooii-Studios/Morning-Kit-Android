<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_exchange_rates_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false"
        android:layout_margin="@dimen/panel_detail_padding">

        <com.yooiistudios.morningkit.panel.exchangerates.MNExchangeInfoLayout
            android:id="@+id/panel_exchange_rates_info_layout_base"
            android:layout_width="0dp"
            android:layout_height="@dimen/panel_exchange_rates_detail_info_height"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/panel_detail_padding_inner"
            android:gravity="center">
        </com.yooiistudios.morningkit.panel.exchangerates.MNExchangeInfoLayout>

        <com.yooiistudios.morningkit.panel.exchangerates.MNExchangeInfoLayout
            android:id="@+id/panel_exchange_rates_info_layout_target"
            android:layout_width="0dp"
            android:layout_height="@dimen/panel_exchange_rates_detail_info_height"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/panel_detail_padding_inner"
            android:layout_gravity="center">
        </com.yooiistudios.morningkit.panel.exchangerates.MNExchangeInfoLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/exchange_layout_editbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="0.1"
            android:minHeight="60dip"
            android:orientation="horizontal"
            android:padding="15dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="20dip" >

                <EditText
                    android:id="@+id/exchange_edit_baseSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:editable="false"
                    android:gravity="right"
                    android:padding="0dip"
                    android:text="123"
                    android:textSize="17sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="44"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minHeight="20dip" >

                <EditText
                    android:id="@+id/exchange_edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.,"
                    android:inputType="numberDecimal"
                    android:padding="0dip"
                    android:textSize="17sp"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:minHeight="20dip" >

                <EditText
                    android:id="@+id/exchange_edit_target"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:gravity="right"
                    android:inputType="numberDecimal"
                    android:padding="0dip"
                    android:text="789"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/panel_exchange_rates_swap_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_exchange_rates_detail_info_height"
        android:layout_margin="@dimen/panel_detail_padding"
        android:gravity="center"
        android:text="@string/exchange_rate_switch_countries"
        android:textStyle="bold"
        android:textSize="@dimen/panel_exchange_rates_detail_currency_code_text_size"/>

</LinearLayout>