<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yooiistudios.morningkit.panel.flickr.detail.MNFlickrDetailFragment">

    <com.stevenkim.waterlily.bitmapfun.ui.RecyclingImageView
        android:id="@+id/flickr_detail_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/flickr_detail_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flickr_detail_imageview"/>

</RelativeLayout>
