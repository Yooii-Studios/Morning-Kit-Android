<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_scroll_view"
        android:layout_gravity="left|top"
        android:fillViewport="true"
        android:background="#000000"
        android:layout_above="@+id/main_admob_layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#444444">

            <com.yooii.morningkit.main.MNWidgetWindowView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ffaaaa"
                android:id="@+id/main_widget_window_view" />

            <com.yooii.morningkit.main.MNMainAlarmListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4444dd"
                android:id="@+id/main_alarm_list_view" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_button_layout_height"
        android:id="@+id/main_button_layout"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/main_admob_layout"
        android:layout_marginLeft="@dimen/padding_main_button_layout"
        android:layout_marginRight="@dimen/padding_main_button_layout"
        android:paddingLeft="@dimen/padding_outer"
        android:paddingRight="@dimen/padding_outer"
        android:background="#777777">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_refresh_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_refresh_off_s3"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="false"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_configure_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_setting_off_s3"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:id="@+id/main_admob_layout"
        android:layout_alignParentLeft="true"
        />

</RelativeLayout>
