<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_calendar_event_indicator_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffaa38"
    android:layout_marginTop="1dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/panel_calendar_event_indicator_item_time_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_centerInParent="true"
        android:text="@string/world_clock_tomorrow"
        android:background="#3311ff"
        android:textColor="#ffffff"
        android:textSize="@dimen/panel_calendar_item_textview_font_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/margin_inner"
        android:layout_marginRight="@dimen/margin_inner"/>

    <View
        android:id="@+id/panel_calendar_event_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_below="@id/panel_calendar_event_indicator_item_time_textview"/>

</RelativeLayout>