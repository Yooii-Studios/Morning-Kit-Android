<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ActionBar styles -->
    <style name="MNActionBar.PastelGreen"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/setting_action_bar_bg_light</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/setting_action_bar_bg_light</item>
    </style>

    <!-- ActionBar tabs bar styles -->
    <style name="MNActionBarTabBar.PastelGreen"
        parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <!-- tab indicator -->
        <item name="android:background">@drawable/setting_action_bar_tab_bg_light</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/setting_action_bar_tab_bg_light</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MNActionBarTabs.PastelGreen"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/setting_actionbar_tab_indicator_light</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/setting_actionbar_tab_indicator_light</item>
    </style>

    <!-- ActionBar tab text color styles -->
    <style name="MNActionBarTabs.TabText.PastelGreen"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/pastel_green_sub_font_color</item>
    </style>

</resources>