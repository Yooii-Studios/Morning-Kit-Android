<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ActionBar styles -->
    <style name="MNSettingActionBar.Default"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/setting_action_bar_bg_default</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/setting_action_bar_bg_default</item>
    </style>

    <!-- ActionBar tabs bar styles -->
    <style name="MNSettingActionBarTabBar.Default"
        parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <!-- tab indicator -->
        <item name="android:background">@drawable/setting_action_bar_tab_bg_default</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/setting_action_bar_tab_bg_default</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MNSettingActionBarTabs.Default"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/setting_actionbar_tab_indicator_default</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/setting_actionbar_tab_indicator_default</item>
    </style>

</resources>