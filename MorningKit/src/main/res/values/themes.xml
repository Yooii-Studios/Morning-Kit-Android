        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MNSettingActionBar.Default</item>
        <item name="android:actionBarTabBarStyle">@style/MNSettingActionBarTabBar.Default</item>
